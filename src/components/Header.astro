---
import SiteOptions from "../site.config.mjs";
export interface Props {
  showTitle?: boolean;
}

const { showTitle = true } = Astro.props;
---

<div
  class="flex flex-col md:flex-row md:justify-between mx-20 mt-3 items-center"
>
  <div>
    <a href="http://reporto.co">
      <img
        src="/images/logo-report-beta.svg"
        alt="Reporto Logo"
        class="h-12 object-cover dark:border-gray-700 hover:opacity-80 transition-opacity"
      />
    </a>
    <!-- Theme Toggle Button -->
    <button
      onclick="toggleTheme()"
      id="theme-toggle-button"
      aria-label="Toggle theme"
      class="absolute top-2 right-2 mt-2 mr-2 p-2 rounded-md text-gray-600 dark:text-gray-300 bg-gray-100 dark:bg-slate-700 hover:bg-gray-200 dark:hover:bg-slate-600 transition-colors"
    >
      <svg
        id="sun-icon"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-5 h-5 hidden"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
        ></path>
      </svg>
      <svg
        id="moon-icon"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-5 h-5 hidden"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z"
        ></path>
      </svg>
    </button>
  </div>

  <div
    class="flex space-x-4 text-gray-500 dark:text-gray-400 font-light text-center"
  >
    <a class="hover:text-gray-900" href="https://reporto.co">Home</a>
    <a class="hover:text-gray-900" href="https://reporto.co/price">Price</a>
    <a class="hover:text-gray-900" href="https://reporto.co/auth/sign-in"
      >Log in</a
    >
  </div>
</div>
<header class="w-full flex flex-col items-center mt-8 mb-4 relative ml-6 mr-6">
  <a href="/" class="flex flex-col items-center">
    {
      showTitle && (
        <>
          <h1 class="text-3xl font-bold tracking-tight mb-2 text-center hover:opacity-80 transition-opacity">
            {SiteOptions.siteTitle}
          </h1>
          <p class="text-md text-gray-500 dark:text-gray-400 font-light text-center">
            {SiteOptions.siteSubTitle}
          </p>
        </>
      )
    }
  </a>
</header>
